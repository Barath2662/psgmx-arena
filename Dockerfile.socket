FROM node:20-alpine
WORKDIR /app

COPY package.json package-lock.json* ./
RUN npm ci --legacy-peer-deps

COPY prisma ./prisma
RUN npx prisma generate

COPY server ./server
COPY src/types ./src/types
COPY src/lib/utils.ts ./src/lib/utils.ts
COPY tsconfig.server.json ./

EXPOSE 3001

CMD ["npx", "tsx", "server/index.ts"]
